@model MeowZone.Core.DTO.CatUpdateRequest

<h2>Edit Cat</h2>

<form method="post">
	<!-- Hidden field to store the catId -->
	<input type="hidden" name="Id" value="@Model.Id" />

	<div class="form-group">
		<label for="Name">Name</label>
		<input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
	</div>
	<div class="form-group">
		<label for="Age">Age</label>
		<input type="number" class="form-control" id="Age" name="Age" value="@Model.Age" required />
	</div>
	<div class="form-group">
		<label for="Breed">Breed</label>
		<input type="text" class="form-control" id="Breed" name="Breed" value="@Model.Breed" required />
	</div>
	<div class="form-group">
		<label for="Color">Color</label>
		<input type="text" class="form-control" id="Color" name="Color" value="@Model.Color" required />
	</div>

	<div class="form-group">
		<label asp-for="Gender" class="control-label">Gender</label>
		<select asp-for="Gender" asp-items="Html.GetEnumSelectList<MeowZone.Enums.GenderOptions>()" class="form-control">
			<option value="Model.Gender">Select Gender</option>
		</select>
		<span asp-validation-for="Gender" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label for="Weight">Weight (kg)</label>
		<input type="number" step="0.1" class="form-control" id="Weight" name="Weight" value="@Model.Weight" required />
	</div>
	<button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("ShowCats")" class="btn btn-secondary">Cancel</a>