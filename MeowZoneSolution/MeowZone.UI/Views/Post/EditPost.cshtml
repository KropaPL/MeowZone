@model PostUpdateRequest

@{
	ViewBag.Title = "Edit Post";
}

<div class="welcome-text">
	Edit Post
</div>

<form method="post">
	<input type="hidden" name="_method" value="PUT" />

	<div class="form-group">
		<label for="Title">Title</label>
		<input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required />
	</div>

	<div class="form-group">
		<label for="Content">Content</label>
		<input type="text" class="form-control" id="Content" name="Content" value="@Model.Content" required />
	</div>

	<input type="hidden" name="authorId" value="@ViewBag.AuthorId" />
	<input type="hidden" name="categoryId" value="@ViewBag.CategoryId" />
	<input type="hidden" name="Id" value="@Model.Id" />

	<button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("ListPostsAccordingToCategory")" class="btn btn-secondary">Cancel</a>
