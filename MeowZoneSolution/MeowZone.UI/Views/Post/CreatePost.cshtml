@model PostAddRequest

@{
	ViewBag.Title = "Create Post";
}

<div class="welcome-text">Create a Post</div>

<form asp-controller="Post" asp-action="CreatePost" method="post">
	<div class="form-group">
		<label asp-for="Title" class="control-label">Title</label>
		<input asp-for="Title" class="form-control" />
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>
	
	<div class="form-group">
		<label asp-for="Content" class="control-label">Content</label>
		<input asp-for="Content" class="form-control" />
		<span asp-validation-for="Content" class="text-danger"></span>
	</div>
	<input type="hidden" name="authorId" value="@Model.AuthorId" />
	<input type="hidden" name="categoryId" value="@Model.CategoryId" />

	<button type="submit" class="btn btn-primary">Save Changes</button>
</form>
<a href="@Url.Action("ListPostsAccordingToCategory")" class="btn btn-secondary">Cancel</a>

