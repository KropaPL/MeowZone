@model CategoryAddRequest
@{
	ViewBag.Title = "Create Category";
}

<div class="welcome-text">
	Add a new Category
</div>


<div class="center-container ">
	<form asp-controller="Category" asp-action="CreateCategory" method="post">
	
		<div class="form-group">
			<label asp-for="Name" class="control-label">Name</label>
			<input asp-for="Name" class="input-text" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Description" class="control-label">Description</label>
			<input asp-for="Description" class="input-text" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
	
		<div class="btn-container">
			<div class="form-group mt-3">
				<button type="submit" class="btn btn-primary">Add Category</button>
			</div>
			<a href="@Url.Action("ShowCategories")" class="btn btn-secondary">Cancel</a>
		</div>
		
	</form>
</div>



