@model CommentUpdateRequest

@{
	ViewBag.Title = "title";
	Layout = "_Layout";
}

<div class="welcome-text">
	Edit Comment
</div>

<form method="post" asp-action="EditComment" asp-controller="Comment">
	<input type="hidden" name="Id" value="@Model.Id" />
	<input type="hidden" name="postId" value="@ViewBag.postId" />

	<div class="form-group">
		<label for="CommentContent">Comment Content</label>
		<input type="text" class="form-control" asp-for="CommentContent" required />
	</div>
	<button type="submit" class="btn btn-primary">Save Changes</button>
</form>

